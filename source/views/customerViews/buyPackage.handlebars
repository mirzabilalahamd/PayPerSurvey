<script>
  $(document).ready(()=>{

      let basic_per_q_cost = 5;
      let standard_per_q_cost = 10;
      let premium_per_q_cost = 15;
      // set package per response cost
      //  alert('set',);

      //package policy
      const basic_per_res_cost = (basic_per_q_cost * {{totalQuestions}});
      const standard_per_res_cost = (standard_per_q_cost * {{totalQuestions}});
      const premium_per_res_cost = (premium_per_q_cost * {{totalQuestions}});




        $('#basic_per_res').prepend('Rs.'+ basic_per_res_cost);
        $('#standard_per_res').prepend('Rs.'+ standard_per_q_cost * {{totalQuestions}});
        $('#premium_per_res').prepend('Rs.'+ premium_per_res_cost);


      $('#basic_res').keyup( ()=>{
        let basic_res=$('#basic_res').val();
        let standard_res =$('#standard_res').val();
        let premium_res = $('#premium_res').val();
        if(!basic_res) basic_res = 0;
        if(!standard_res) standard_res = 0;
        if(!premium_res) premium_res = 0;


        $('#basic_cost').text('Rs.'+ basic_res * basic_per_res_cost);

        let total_respone = parseInt(basic_res) + parseInt(standard_res) + parseInt(premium_res);
        let total_cost = (basic_res * basic_per_res_cost) + (standard_res * standard_per_res_cost)
         + (premium_res * premium_per_res_cost);
         $('#total_res').text(total_respone);
         $('#total_cost').text('Rs.'+total_cost);

        //let per_question_cost = 5;
       // $('#basic_cost').text('a');
      })
      $('#standard_res').keyup(()=>{
        let basic_res=$('#basic_res').val();
        let standard_res =$('#standard_res').val();
        let premium_res = $('#premium_res').val();
        if(!basic_res) basic_res = 0;
        if(!standard_res) standard_res = 0;
        if(!premium_res) premium_res = 0;

       $('#standard_cost').text('Rs.'+ standard_res*standard_per_res_cost);

       let total_respone = parseInt(basic_res) + parseInt(standard_res) + parseInt(premium_res);
        let total_cost = (basic_res * basic_per_res_cost) + (standard_res * standard_per_res_cost)
         + (premium_res * premium_per_res_cost);
         $('#total_res').text(total_respone);
         $('#total_cost').text('Rs.'+total_cost);
      })

      $('#premium_res').keyup(()=>{
      let basic_res=$('#basic_res').val();
        let standard_res =$('#standard_res').val();
        let premium_res = $('#premium_res').val();
        if(!basic_res) basic_res = 0;
        if(!standard_res) standard_res = 0;
        if(!premium_res) premium_res = 0;

       $('#premium_cost').text('Rs.'+ premium_res*premium_per_res_cost);

       let total_respone = parseInt(basic_res) + parseInt(standard_res) + parseInt(premium_res);
        let total_cost = (basic_res * basic_per_res_cost) + (standard_res * standard_per_res_cost)
         + (premium_res * premium_per_res_cost);
         $('#total_res').text(total_respone);
         $('#total_cost').text('Rs.'+total_cost);
      })

      //package validation
      $('#send').click(()=>{


        let basic_res=$('#basic_res').val();
        let standard_res =$('#standard_res').val();
        let premium_res = $('#premium_res').val();
        if(!basic_res) basic_res = 0;
        if(!standard_res) standard_res = 0;
        if(!premium_res) premium_res = 0;


        let total_respone = parseInt(basic_res) + parseInt(standard_res) + parseInt(premium_res);
        let total_cost = (basic_res * basic_per_res_cost) + (standard_res * standard_per_res_cost)
         + (premium_res * premium_per_res_cost);
          if(!$('#closeTime').val()){
          alert('close time must be selected');
        }
        else if(total_respone<1) alert('at least one response required!');
        else if(total_cost > {{balance}}) alert('your balance is lower then the total cost please add balance!');
        else $('form').submit();

      })
  })

